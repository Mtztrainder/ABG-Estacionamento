<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="Painel" prefHeight="400.0" prefWidth="668.0" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unoeste.fipp.andrebrunogabriel.abgestacionamentosfipp.abgestacionamento.Menu">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="_Cadastros">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onActionMarca" text="Marca..." />
                  <MenuItem mnemonicParsing="false" onAction="#onActionModelo" text="Modelo..." />
                  <MenuItem mnemonicParsing="false" onAction="#onActionProprietario" text="Proprietário..." />
                  <MenuItem mnemonicParsing="false" onAction="#onActionVeiculo" text="Veículo..." />
                  <MenuItem mnemonicParsing="false" onAction="#onActionValores" text="Valores..." />
                <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#onActionSair" text="Sair">
                     <accelerator>
                        <KeyCodeCombination alt="DOWN" code="X" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="_Registrar">
              <items>
                  <MenuItem onAction="#onActionRegistrar" mnemonicParsing="false" text="Entrada/Saída..." />
              </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="400.0" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <Label text="FIPP Tools inc.">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </bottom>
</BorderPane>
