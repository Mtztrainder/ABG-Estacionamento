<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unoeste.fipp.andrebrunogabriel.abgestacionamentosfipp.abgestacionamento.TabelaAcesso">
   <children>
      <HBox alignment="CENTER" prefHeight="79.0" prefWidth="640.0" spacing="20.0" style="-fx-background-color: gray;">
         <children>
            <TextField fx:id="tfFiltro" onKeyTyped="#onKeyTyped" prefHeight="25.0" prefWidth="336.0" promptText="Digite a placa do Veículo">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <Button mnemonicParsing="false" onAction="#onActionNovaEntrada" text="Registrar Entrada">
               <font>
                  <Font size="14.0" />
               </font></Button>
         </children>
      </HBox>
      <TableView fx:id="Tabela" prefHeight="297.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colCodigo" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="ID" />
            <TableColumn fx:id="colPlaca" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Placa" />
            <TableColumn fx:id="colModelo" minWidth="0.0" prefWidth="422.0" text="Modelo" />
            <TableColumn fx:id="colCor" minWidth="0.0" prefWidth="422.0" text="Cor" />
            <TableColumn fx:id="colEntrada" minWidth="0.0" prefWidth="422.0" text="Horário de Entrada" />
            <TableColumn fx:id="colSaida" minWidth="0.0" prefWidth="422.0" text="Horário de Saída" />
            <TableColumn fx:id="colValor" minWidth="0.0" prefWidth="422.0" text="Valor" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <contextMenu>
            <ContextMenu>
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#onActionAlterar" text="Alterar" />
                  <MenuItem mnemonicParsing="false" onAction="#onActionApagar" text="Remover" />
              </items>
            </ContextMenu>
         </contextMenu>
      </TableView>
   </children>
</VBox>
